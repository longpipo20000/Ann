--[[
    FAKE BAN SCRIPT - TROLL ONLY
    Tác giả: Andeptrai
    Chức năng: Hiện thông báo giả mạo bị ban khi chạy script.
    Cách thoát: Bấm nút "Leave" (Nó sẽ kick thật) hoặc nhấn phím Delete để xóa UI.
]]

local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")
local Lighting = game:GetService("Lighting")
local UserInputService = game:GetService("UserInputService")

-- Xóa GUI cũ nếu lỡ chạy 2 lần
if CoreGui:FindFirstChild("RobloxErrorGui") then
    CoreGui.RobloxErrorGui:Destroy()
end
if Lighting:FindFirstChild("BanBlur") then
    Lighting.BanBlur:Destroy()
end

-- 1. TẠO HIỆU ỨNG MỜ (BLUR)
local Blur = Instance.new("BlurEffect")
Blur.Name = "BanBlur"
Blur.Size = 20
Blur.Parent = Lighting

-- 2. TẠO GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "RobloxErrorGui"
ScreenGui.IgnoreGuiInset = true
ScreenGui.Parent = CoreGui

-- Màn hình đen mờ phía sau
local Background = Instance.new("Frame")
Background.Size = UDim2.new(1, 0, 1, 0)
Background.BackgroundColor3 = Color3.new(0, 0, 0)
Background.BackgroundTransparency = 0.5
Background.Parent = ScreenGui

-- Khung thông báo chính
local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 400, 0, 220)
MainFrame.Position = UDim2.new(0.5, -200, 0.5, -110)
MainFrame.BackgroundColor3 = Color3.fromRGB(57, 59, 61) -- Màu xám chuẩn Roblox
MainFrame.BorderSizePixel = 0
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 8)
MainFrame.Parent = ScreenGui

-- Tiêu đề "Disconnected"
local Title = Instance.new("TextLabel")
Title.Text = "Disconnected"
Title.Size = UDim2.new(1, 0, 0.2, 0)
Title.Position = UDim2.new(0, 0, 0.05, 0)
Title.BackgroundTransparency = 1
Title.TextColor3 = Color3.new(1, 1, 1)
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 24
Title.Parent = MainFrame

-- Nội dung thông báo (Lý do Ban)
local Message = Instance.new("TextLabel")
Message.Text = "You have been banned from this experience.\n\nReason: Exploiting Detected.\n(Error Code: 267)"
Message.Size = UDim2.new(0.9, 0, 0.4, 0)
Message.Position = UDim2.new(0.05, 0, 0.25, 0)
Message.BackgroundTransparency = 1
Message.TextColor3 = Color3.new(0.9, 0.9, 0.9)
Message.Font = Enum.Font.SourceSans
Message.TextSize = 18
Message.TextWrapped = true
Message.Parent = MainFrame

-- Nút Leave (Bấm vào là kick thật để troll)
local Button = Instance.new("TextButton")
Button.Text = "Leave"
Button.Size = UDim2.new(0.4, 0, 0.2, 0)
Button.Position = UDim2.new(0.3, 0, 0.7, 0)
Button.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
Button.TextColor3 = Color3.new(0, 0, 0) -- Chữ đen nền trắng
Button.Font = Enum.Font.SourceSansBold
Button.TextSize = 18
Instance.new("UICorner", Button).CornerRadius = UDim.new(0, 6)
Button.Parent = MainFrame

-- 3. CHỨC NĂNG
-- Đóng băng nhân vật để tăng độ chân thật
local LocalPlayer = Players.LocalPlayer
if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
    LocalPlayer.Character.HumanoidRootPart.Anchored = true
end

-- Xử lý nút bấm
Button.MouseButton1Click:Connect(function()
    -- Troll cực mạnh: Bấm Leave là bị kick khỏi server thật luôn
    LocalPlayer:Kick("Exploiting Detected.")
end)

-- Phím tắt bí mật để xóa bảng (Delete) nếu bạn tự test
UserInputService.InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.Delete then
        ScreenGui:Destroy()
        Blur:Destroy()
        if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
            LocalPlayer.Character.HumanoidRootPart.Anchored = false
        end
    end
end)
